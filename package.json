{
  "name": "flowscope",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time application flow analysis for vibe coding",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:frontend": "vite",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:frontend && npm run build:mcp && npm run build:server",
    "build:frontend": "vite build",
    "build:mcp": "cd mcp-server && npm install && npm run build",
    "build:server": "cd server && npm install && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "cd server && npm start",
    "deploy:smithery": "bash deploy-smithery.sh",
    "setup": "npm install && cd mcp-server && npm install && cd ../server && npm install && cd .."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@xyflow/react": "^12.8.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "keywords": [
    "flow-analysis",
    "vibe-coding",
    "real-time",
    "mcp-server",
    "react",
    "typescript",
    "visualization"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/flowscope.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/flowscope/issues"
  },
  "homepage": "https://github.com/your-username/flowscope#readme"
}
